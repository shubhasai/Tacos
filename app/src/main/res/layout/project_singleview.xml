<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/projectspic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_projectimage" />

            <TextView
                android:textAllCaps="true"
                android:id="@+id/ProjectsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/projectspic"
                android:hint="Name Of Project (e.g. Tacos) "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:textAllCaps="true"
                android:id="@+id/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ProjectsName"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/projectspic"
                android:hint="Category (Android App / Website)"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ProjectsName"
                android:layout_marginStart="3dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@+id/projectspic"
                android:gravity="center"
                android:hint="Author"
                android:textSize="14sp" />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:autoLink="all"
                android:textSize="14sp"
                android:layout_marginHorizontal="5dp"
                android:gravity="bottom"
                android:id="@+id/aboutProjects"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>